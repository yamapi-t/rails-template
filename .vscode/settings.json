{
    "editor.tabSize": 2,
    "[ruby]": {
        "editor.defaultFormatter": "Shopify.ruby-lsp",
        "editor.formatOnSave": true
    },
    "rubyLsp.formatter": "rubocop",
    "rubyLsp.rubyVersionManager": {
        "identifier": "asdf"
    },
    "rubyLsp.linters": [
        "rubocop"
    ],
    "tailwindCSS.includeLanguages": {
        "html.erb": "html"
    },
    "files.associations": {
        "*.html.erb": "erb"
    }
}